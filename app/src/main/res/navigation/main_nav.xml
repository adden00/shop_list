<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/shopListFragment"
        android:name="com.adden00.shopping_list.features.shop_lists_screen.presentation.ShopListsFragment"
        android:label="fragment_shop_list"
        tools:layout="@layout/fragment_shop_lists">
        <action
            android:id="@+id/action_shopListFragment_to_shopListItemsFragment"
            app:destination="@id/shopListItemsFragment" />
        <action
            android:id="@+id/action_shopListFragment_to_startFragment"
            app:destination="@id/startFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/shopListItemsFragment"
        android:name="com.adden00.shopping_list.features.shop_list_items_screen.presentation.ShopListItemsFragment"
        android:label="fragment_shop_list_items"
        tools:layout="@layout/fragment_shop_list_items" />
    <fragment
        android:id="@+id/authFragment"
        android:name="com.adden00.shopping_list.features.auth_screen.presentation.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_shopListFragment"
            app:destination="@id/shopListFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.adden00.shopping_list.features.start_screen.presentation.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_shopListFragment"
            app:destination="@id/shopListFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_startFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>